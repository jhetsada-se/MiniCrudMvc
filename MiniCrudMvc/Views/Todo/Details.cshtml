@model MiniCrudMvc.Models.TodoItem

@{
    ViewData["Title"] = "Todo Details";
}

<h2>Todo Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>

        <dt class="col-sm-2">
            Is Done
        </dt>
        <dd class="col-sm-10">
            @Model.IsDone
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>